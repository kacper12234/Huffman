<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.huffman.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="textField" wrapText="true" prefHeight="150"/>
    <Label text="Decoded text:" />
    <Label fx:id="decodedText" wrapText="true"/>
    <Label text="Encoded text:" />
    <Label fx:id="encodedText" wrapText="true"/>
    <Button text="Example text" onAction="#onExampleButtonClick"/>
    <Button text="Encode text" onAction="#onHelloButtonClick"/>
</VBox>
